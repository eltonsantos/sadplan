<h2>Bem vindo ao Sadplan</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="login-form login-formulario">
  	<div class="control-group" style="width: 320px">
      <%= f.input :email, label:"&nbsp;", :required => false, :autofocus => true, input_html: {class: 'login-field'}, label_html: {class: "login-field-icon fui-user", style: 'z-index: 10'}, placeholder: "Email" %>      
    </div>
    <div class="control-group" style="width: 320px">
      <%= f.input :password, label:"&nbsp;", :required => false, :autofocus => true, input_html: {class: 'login-field'}, label_html: {class: "login-field-icon fui-lock", style: 'z-index: 10'}, placeholder: "Password" %>
    </div>  
  

    <div class="form-actions">
      <%= f.button :submit, "Sign in" , class: "btn btn-sucess button-login" %>
    </div>

  </div>

<% end %>

<%= render "devise/shared/links" %>
